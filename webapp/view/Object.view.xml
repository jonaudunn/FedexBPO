<mvc:View
	controllerName="is.applicon.test.controller.Object"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic"
	xmlns:footerbar="sap.ushell.ui.footerbar">

	<semantic:FullscreenPage
		id="page"
		navButtonPress="onNavBack"
		showNavButton="true"
		title="{Name}"
		busy="{objectView>/busy}"
		busyIndicatorDelay="{objectView>/delay}">

		<semantic:content>
			<ObjectHeader
				id="objectHeader"
				title="{Name}"
				fullScreenOptimized="true"
				responsive="true">
				<attributes>
					<ObjectAttribute
						title="BP Number"
						text="{Partner}"
					/>
					<ObjectAttribute
						title="SSN"
						text="{SSN}"
					/>
					<ObjectAttribute
						title="Email"
						text="{Email}"
					/>
					<ObjectAttribute
						title="Telephone"
						text="{Telephone}"
					/>
					<ObjectAttribute
						title="Address"
						text="{Street}, {PostalCode} {City}"
					/>
					<ObjectAttribute
						title="Country"
						text="{Country}"
					/>
				</attributes>
			</ObjectHeader>
 		</semantic:content>

		<semantic:content>
			<TileContainer
			id="tileContainer">
				<StandardTile
					id="loans"
					icon=""
					title="Loans"
					info="Overdue"
					number="2356"
					numberUnit="euro"
					infoState="Error"
				/>
				<StandardTile
					id="deposits"
					icon=""
					title="Deposits"
					info="28 days ago"
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/>
				<StandardTile
					icon=""
					title=""
					info=""
				/><StandardTile
					icon=""
					title=""
					info=""
				/>
			</TileContainer>
 		</semantic:content>

		<semantic:sendEmailAction>
			<semantic:SendEmailAction id="shareEmail" press="onShareEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:shareInJamAction>
			<semantic:ShareInJamAction id="shareInJam" visible="{FLP>/isShareInJamActive}" press="onShareInJamPress"/>
		</semantic:shareInJamAction>

		<semantic:saveAsTileAction>
			<footerbar:AddBookmarkButton id ="shareTile" title="{objectView>/saveAsTileTitle}" />
		</semantic:saveAsTileAction>

	</semantic:FullscreenPage>

</mvc:View>